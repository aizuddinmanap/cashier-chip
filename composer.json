{
    "name": "aizuddinmanap/cashier-chip",
    "description": "Laravel Cashier provider for Chip payment processing.",
    "keywords": [
        "laravel",
        "chip",
        "billing",
        "payments",
        "subscriptions",
        "cashier"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Aizuddin Manap",
            "email": "aizuddinmanap@gmail.com"
        }
    ],
    "homepage": "https://github.com/aizuddinmanap/cashier-chip",
    "support": {
        "issues": "https://github.com/aizuddinmanap/cashier-chip/issues",
        "source": "https://github.com/aizuddinmanap/cashier-chip"
    },
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-openssl": "*",
        "guzzlehttp/guzzle": "^7.4.5",
        "illuminate/contracts": "^10.0|^11.0|^12.0",
        "illuminate/database": "^10.0|^11.0|^12.0",
        "illuminate/http": "^10.0|^11.0|^12.0",
        "illuminate/routing": "^10.0|^11.0|^12.0",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/view": "^10.0|^11.0|^12.0",
        "moneyphp/money": "^3.2|^4.0",
        "nesbot/carbon": "^2.67|^3.0",
        "spatie/url": "^1.3.5|^2.0",
        "symfony/http-kernel": "^6.2|^7.0",
        "symfony/polyfill-intl-icu": "^1.22.1"
    },
    "suggest": {
        "dompdf/dompdf": "Required for PDF invoice generation (^2.0|^3.0)"
    },
    "require-dev": {
        "dompdf/dompdf": "^3.0",
        "mockery/mockery": "^1.5.1",
        "orchestra/testbench": "^8.14|^9.0|^10.0",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.4|^11.5"
    },
    "autoload": {
        "psr-4": {
            "Aizuddinmanap\\CashierChip\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aizuddinmanap\\CashierChip\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Aizuddinmanap\\CashierChip\\ChipServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
